<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="uk.ac.ebi.intact.view.webapp"/>
     <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <context:property-placeholder location="classpath:/uk/ac/ebi/intact/binarysearch/BuildInfo.properties"/>

    <bean id="searchBean" class="uk.ac.ebi.intact.view.webapp.controller.search.SearchController">
        <constructor-arg ref="config"/>
    </bean>

    <bean id="config" class="uk.ac.ebi.intact.view.webapp.controller.config.PsicquicViewConfig">
        <property name="configFile" value="${config.file}"/>
        <property name="title" value="PSICQUIC View"/>
        <property name="logoUrl" value="/images/logos/psicquicLogo.png"/>
    </bean>
    
</beans>